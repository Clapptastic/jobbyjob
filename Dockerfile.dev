FROM node:20-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache git python3 make g++

# Install global npm packages
RUN npm install -g concurrently ts-node-dev

# Copy package files and scripts needed for install
COPY package*.json ./
COPY scripts ./scripts/

# Install dependencies
RUN npm install

# Install PWA plugin and workbox packages as regular dependencies
RUN npm install ts-node vite-plugin-pwa@0.21.1 workbox-window@7.3.0 workbox-core@7.3.0 workbox-routing@7.3.0 workbox-strategies@7.3.0 workbox-precaching@7.3.0 workbox-cacheable-response@7.3.0 workbox-expiration@7.3.0

# Copy remaining source code
COPY . .

# Expose Vite development port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev"]