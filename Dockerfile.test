FROM mcr.microsoft.com/playwright:v1.41.1-focal

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Install browsers
RUN npx playwright install --with-deps chromium firefox webkit

# Set environment variables
ENV CI=true
ENV NODE_ENV=test

# Run tests
CMD ["npm", "run", "test:ci"]